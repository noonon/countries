@import "~style/index";

.main
  font-family ProximaNovaRegular
  & > .main__title
    font-size 24px
    color color_blue_1
    cursor pointer
    display inline-block
    line-height: 50px;
    height 50px
    padding-left 40px
    white-space: nowrap;
    position relative
    &_active
      &:after
        transform rotate(180deg)
    &:after
      content '';
      position absolute
      top: 15px;
      transition transform .3s ease
      left: 10px;
      width: 21px;
      height: 23px;
      background-image img_arrow
  & > .main__content
    position relative
    & > .main__content-choose
      position absolute
      background-color color_white_1
      box-shadow 0 0 0 0 color_black_1
      margin-bottom 40px
      top 0
      left 0
      opacity 0
      z-index -1
      transition z-index 0s .3s, opacity .2s ease .1s, box-shadow .1s ease
      border-radius var_border_radius
      border 2px color_grey_1 solid
      &_active
        opacity 1
        box-shadow 0 8px 20px -5px color_black_2
        z-index 1
        transition z-index 0s, opacity .3s ease, box-shadow .3s ease
      & > .main__content-choose-countries
        & > .main__content-choose-countries-list
          padding 20px 40px
          & > .main__content-choose-countries-list-item
            font-size 18px
            width 150px
            text-align left
            padding 16px
            &>.main__content-choose-countries-list-item-text
              cursor pointer
              &_active
                color: color_grey_2
      & > .main__content-choose-cities
        color color_blue_1
        & > .main__content-choose-cities-list
          padding 20px 40px;
          & > .main__content-choose-cities-list-item
            font-size 18px
            text-align left
            width 200px
            padding 16px
            & > .main__content-choose-cities-list-item-text
              cursor pointer
    & > .main__content-places
      & > .main__content-places-list
        & > .main__content-places-list-item
          padding 16px
          position relative
          &:after
            content '';
            position absolute
            top: 20px;
            left: -7px;
            width: 13px;
            height: 19px;
            background-image img_flag
          & > .main__content-places-list-item-name
            font-family: ProximaNovaBold
            font-size 18px
          & > .main__content-places-list-item-time
            font-size 16px
            color color_blue_1
            padding-left 20px
            position relative
            &:after
              content '';
              position absolute
              top: 2px;
              width: 16px;
              height: 15px;
              left: -3px;
              background-image img_clock
          & > .main__content-places-list-item-address
            display block
            font-size 16px
            margin 0
            padding 0
            & > .main__content-places-list-item-address-item
              margin-left 20px
              &:first-child:last-child
                list-style: none
                margin-left 0

@media only screen and (max-width: 48em)
  .main > .main__content > .main__content-choose > .main__content-choose-cities > .main__content-choose-cities-list
    padding 20px 40px
    &> .main__content-choose-cities-list-item
      padding 16px